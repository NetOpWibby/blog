{
  "name": "theWebb.blog",
  "description": "Official blog of Paul Anthony Webb",
  "author": "Paul Anthony Webb <paul@inc.sh>",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "app-root-path": "^2.1.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "chewit": "^1.0.9",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "express-minify-html": "^0.12.0",
    "feed": "^1.1.1",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "hbs": "^4.0.1",
    "hbs-utils": "0.0.4",
    "js-yaml": "^3.12.0",
    "markdown-it": "^8.4.1",
    "morgan": "^1.9.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "sass": "^1.9.0",
    "snazzy": "^7.1.1",
    "standardx": "^2.1.0",
    "updates": "^3.0.1"
  },
  "babel": {
    "presets": [
      "env",
      "stage-2"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "standardx": {
    "ignore": [
      "public"
    ]
  },
  "scripts": {
    "build": "npm install && npm run clean && npm run build-server",
    "build-server": "babel -d build server",
    "clean": "rm -rf build && mkdir build",
    "deploy": "vagrant push",
    "sass": "sass --watch sass:public/css --style compressed",
    "start": "npm run build && NODE_ENV=production node build/index.js",
    "test": "run-p test:*",
    "test:dependencies": "updates -u ./",
    "test:lint": "standardx --verbose | snazzy",
    "watch": "run-p watch:*",
    "watch:sass": "sass --watch sass:public/css --style compressed",
    "watch:server": "NODE_ENV=development nodemon server/index.js --ignore 'public/' --exec babel-node --presets env,stage-2"
  }
}
